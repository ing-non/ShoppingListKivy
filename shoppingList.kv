MainWidget:

<MainWidget@GridLayout>:
    cols: 1
    Label:
        canvas.before:
            Color:
                rgb: 0, .6, .87
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, 0.1
        pos_hint: None, None
        pos: self.pos
        text: "Hello World"

    ScrollListItems:
        size_hint: 1, .7


    Label:
        canvas.before:
            Color:
                rgb: 0, .6, .87
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, 0.1
        pos_hint: None, None
        pos: self.width, 0
        text: "Hello"




<ScrollListItems>:
    ScrollView:
        Table:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height


<Row>:
    spacing: 50
    size_hint_y: None
    size_hint_x: 1
    height: 100
    Label:
        text: root.txt
        color: 0, 0, 0, 1
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
            Color:
                rgb: .5, .5, .5
            Rectangle:
                size: self.width, dp(1)
                pos: self.pos
